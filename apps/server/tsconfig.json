{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@autoverse/shared": ["../../packages/shared/src/index.ts"],
      "@autoverse/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src"]
}
